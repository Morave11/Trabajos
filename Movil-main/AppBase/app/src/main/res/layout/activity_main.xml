<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/main" android:layout_width="match_parent" android:layout_height="match_parent" tools:context=".MainActivity">
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Formulario usuario"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintHorizontal_bias="0.498"
			app:layout_constraintVertical_bias="0.074"
			android:id="@+id/textView2"/>
	<EditText
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:inputType="text"
			android:ems="10"
			android:id="@+id/nombre"
			android:hint="Nombre"
			app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintVertical_bias="0.154" app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.208"
			android:layout_marginStart="24dp" android:layout_marginEnd="24dp" tools:ignore="InvalidId"/>
	<EditText
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:inputType="text"
			android:hint="Edad"
			android:id="@+id/edad"
			android:ems="10"
			app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintHorizontal_bias="0.119" app:layout_constraintVertical_bias="0.241"
			android:layout_marginStart="24dp" android:layout_marginEnd="24dp"/>
	<TextView
			android:text="Visualizacion de la data"
			android:layout_width="wrap_content"
			android:layout_height="19dp"
			android:id="@+id/textView"
			app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintHorizontal_bias="0.11" app:layout_constraintVertical_bias="0.342"/>
	<Button
			android:text="Crear persona"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/nuevapersona"
			android:onClick="crearpersona"
			app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintHorizontal_bias="0.139" app:layout_constraintVertical_bias="0.437"/>
	<ImageView
			android:layout_width="159dp"
			android:layout_height="135dp" app:srcCompat="@android:drawable/alert_light_frame"
			android:id="@+id/imageView"
			app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintHorizontal_bias="0.904" app:layout_constraintVertical_bias="0.409"/>

	<Button
			android:text="Mostrar Datos"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/MostrarApikotlin"
			android:onClick="crearmostrarpersonas"
			app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.139"
			app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.566"/>
	<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/RecyPersonas"
			android:layout_width="159dp"
			android:layout_height="166dp"
			app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.15" app:layout_constraintVertical_bias="0.8"/>
	<Button
			android:text="Segunda Actividad"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/buttonSegundaActividad"
			app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintHorizontal_bias="0.938" app:layout_constraintVertical_bias="0.923"/>

</androidx.constraintlayout.widget.ConstraintLayout>